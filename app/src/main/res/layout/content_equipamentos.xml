<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">

        <!--Put form controls here-->
        <TextView
            android:id="@+id/TextViewBloco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identificação do CRAS"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/EditTextNome"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/EditTextEndereco"
            android:layout_height="wrap_content"
            android:hint="Endereço"
            android:inputType="textEmailAddress"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/EditTextComplemento"
            android:layout_height="wrap_content"
            android:hint="Complemento"
            android:inputType="textEmailAddress"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/EditTextBairro"
            android:layout_height="wrap_content"
            android:hint="Bairro"
            android:inputType="textEmailAddress"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/EditTextMunicipio"
            android:layout_height="wrap_content"
            android:hint="Municipio"
            android:inputType="textEmailAddress"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/EditTextEstado"
            android:layout_height="wrap_content"
            android:hint="Estado"
            android:inputType="textEmailAddress"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/EditTextCEP"
            android:layout_height="wrap_content"
            android:hint="CEP"
            android:inputType="textEmailAddress"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/EditTextEmail"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/EditTextTelefone"
            android:layout_height="wrap_content"
            android:hint="Telefone"
            android:inputType="textEmailAddress"
            android:layout_width="fill_parent">
        </EditText>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Localização: "
                />

            <RadioButton android:id="@+id/radio_pirates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urbano Central"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_ninjas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urbano Periferico( fora do centro da cidade)"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_ninjas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rural"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacidade de referenciamento: "
                />

            <RadioButton android:id="@+id/radio_pirates2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2500 familias"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_ninjas2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3500 familias"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_ninjas2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000 familias"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario de Funcionamento: "
                />

            <RadioButton android:id="@+id/radio_pirates2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dias por semana"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_ninjas2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horas por dia"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_ninjas2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000 familias"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>
    </LinearLayout>
</ScrollView>